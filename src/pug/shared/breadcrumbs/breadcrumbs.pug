mixin breadcrumbs(links, mods)
  -
    const baseName = 'breadcrumbs'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '_' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  ul.breadcrumbs(class=allMods)&attributes(attributes)
    li
      a.breadcrumbs__item(href='#') Главная
        +breadcrumb
    li
      a.breadcrumbs__item.breadcrumbs__item_active Контакты
        +breadcrumb-active

