mixin contacts-socials(mods)
  -
    const baseName = 'contacts-socials'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '_' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .contacts-socials(class=allMods)&attributes(attributes)
    h3 Мы в социальных сетях
    .contacts-socials__block
      +social-link('#', '_blue')
        +vk-icon
      +social-link('#', '_red')
        +ytb-icon
      +social-link('#', '_orange')
        +ok-icon
